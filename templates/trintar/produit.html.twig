{% extends 'base.html.twig' %}

{% block title 'TRINTAR - Produits' %}

{% block body %}
    <br>
    <div class="container">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col-md-3">
                {{ form_row(form.categories) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.libelle) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.auteur) }}
            </div>
            &nbsp;
            <div class="col-md-3">
                <button class="btn btn-primary">Rechercher</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                {% for produit in produits %}
                    <div class="col-md-4">
                        {% include 'trintar/_produit.html.twig' %}
                    </div>
                {% endfor %}
            </div>
            <br>
            <div class="pagination">
                {{ knp_pagination_render(produits) }}
            </div>
        </div>
    </div>
{% endblock %}