{% extends 'base.html.twig' %}

{% block title 'TRINTAR.com - Magasin' %}

{% block body %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col">
                    {% if magasin.filename %}
                        <img src="../images/magasins/{{ magasin.filename }}" alt="Symfony!" style="width: 100%; height:auto;">
                    {% else %}
                        <img src="{{ '../images/magasins/db.jpg' }}" alt="Symfony!" class="image-display" style="width: 100%; height:auto;" />
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <strong>Intitulé :&nbsp;</strong><br> {{ magasin.nom | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Adresse :&nbsp;</strong><br> {{ magasin.adresse | nl2br }}, {{ magasin.codePostal | nl2br }}, {{ magasin.ville | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Département :&nbsp;</strong><br> {{ magasin.departement | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Pays :&nbsp;</strong><br> {{ magasin.pays | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Téléphone :&nbsp;</strong><br> {{ magasin.telephone | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Courriel :&nbsp;</strong><br> {{ magasin.courriel | nl2br }}
            </div>
            <br>
            <div class="row">
                <strong>Option(s) du magasin :&nbsp;</strong><br>{% for optionMagasin in magasin.idOptionMagasin %} {{ optionMagasin.libelle | nl2br }},{% endfor %}
            </div>
            <br>
            <div class="row">
                <strong>Licence(s) disponible dans ce magasin :&nbsp;</strong><br>
                {% for produit in magasin.idProduit %}
                    <a href="{{ path('produit.show', {id: produit.id, slug: produit.slug}) }}">{{ produit.libelle | nl2br }} ({% for tomes in produit.idTomes %}{{ tomes.libelle | nl2br }},{% endfor %})</a>,
                {% endfor %}
            </div>
            <br>
        </div>
    </div>
    <br>
    <div class="jumbotron">
        <div class="container-fluid">
            <div id="map">
                <!-- Ici s'affichera la carte -->
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <a href="{{ path ('trintar.magasin')}}" class="btn btn-primary">Revenir à la page des magasins</a>
                </div>
                <div class="col-md-3">
                    <a href="" class="btn btn-secondary">Commander un produit</a>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
    <style type="text/css">
        #map{ /* la carte DOIT avoir une hauteur sinon elle n'apparaît pas */
            height:400px;
        }
    </style>
    <!-- Fichiers Javascript -->
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type="text/javascript">
        // On initialise la latitude et la longitude de Paris (centre de la carte)
        var lat = {{ magasin.lat }};
        var lon = {{ magasin.lng }};
        var macarte = null;
        // Fonction d'initialisation de la carte
        function initMap() {
            // Créer l'objet "macarte" et l'insèrer dans l'élément HTML qui a l'ID "map"
            macarte = L.map('map').setView([lat, lon], 11);
            // Leaflet ne récupère pas les cartes (tiles) sur un serveur par défaut. Nous devons lui préciser où nous souhaitons les récupérer. Ici, openstreetmap.fr
            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                // Il est toujours bien de laisser le lien vers la source des données
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 1,
                maxZoom: 20
            }).addTo(macarte);
            var marker = L.marker([lat, lon]).addTo(macarte);
        }
        window.onload = function(){
            // Fonction d'initialisation qui s'exécute lorsque le DOM est chargé
            initMap();
        };
    </script>
{% endblock %}