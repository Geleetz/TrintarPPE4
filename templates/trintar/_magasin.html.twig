<div class="content">
    <div class="row">
        <div class="bg-light m-2 p-3" style="border-radius:10px;">
            <div class="text-center">
                {% if magasin.filename %}
                    <img src="images/magasins/{{ magasin.filename }}" alt="Symfony!" style="width: 100%; height:auto;">
                {% else %}
                    <img src="{{ 'images/magasins/db.jpg' }}" alt="Symfony!" class="image-display" style="width: 100%; height:auto;" />
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('magasin.show', {id: magasin.id, slug: magasin.slug}) }}">{{ magasin.nom }}</a>
                        <p>{{ magasin.adresse }}, {{ magasin.pays }} </p>
                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>
<br>