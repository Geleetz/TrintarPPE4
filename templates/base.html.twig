    <script>
        let inputAddress = document.querySelector('#magasin_adresse')
        if (inputAddress !== null) {
            let placesAutocomplete = places({
                appId: 'plB1R5LFAXKE',
                apiKey: '21c517e1e92e4acf7923fbdf25718e54',
                container: inputAddress
            })
            placesAutocomplete.on('change', e => {
                document.querySelector('#magasin_ville').value = e.suggestion.city
                document.querySelector('#magasin_departement').value = e.suggestion.county
                document.querySelector('#magasin_pays').value = e.suggestion.country
                document.querySelector('#magasin_codePostal').value = e.suggestion.postcode
                document.querySelector('#magasin_lat').value = e.suggestion.latlng.lat
                document.querySelector('#magasin_lng').value = e.suggestion.latlng.lng
            })
        }

        let searchAddress = document.querySelector('#search_address')
        if (searchAddress !== null) {
            let place = places({
                container: searchAddress
            })
            place.on('change', e => {
                document.querySelector('#lat').value = e.suggestion.latlng.lat
                document.querySelector('#lng').value = e.suggestion.latlng.lng
            })
        }


    </script>
