{% extends 'base.html.twig' %}

{% block title 'Gérer les biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="text-center">
            <div class="container mt-4">
                <h1>ADMINISTRATION TOMES</h1>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
            </tr>
            </thead>
            <tbody>
            {% for tomes in tomes %}
                <tr>
                    <td>{{ tomes.id }}</td>
                    <td>{{ tomes.libelle }}</td>
                    <td>
                        <a href="{{ path('admin.tomes.edit', {id : tomes.id}) }}" class="btn btn-secondary">Editer</a>
                        <form method="post" action="{{ path('admin.tomes.delete', {id: tomes.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tomes.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.tomes.new') }}" class="btn btn-primary">Créer un nouveau tome</a>
        </div>
    </div>
{% endblock %}